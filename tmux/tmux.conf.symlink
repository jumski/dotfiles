# Core settings
source-file ~/.dotfiles/tmux/settings.conf

# Navigation configuration (windows, panes, splits, resizing)
source-file ~/.dotfiles/tmux/navigation.conf

# Clipboard configuration (copy/paste)
source-file ~/.dotfiles/tmux/clipboard.conf

# Shortcuts (session, window, pane management)
source-file ~/.dotfiles/tmux/shortcuts.conf

# Utilities (man, alsamixer, htop, github, muxit, dotfiles)
source-file ~/.dotfiles/tmux/utilities.conf

# Dictation integration
source-file ~/.dotfiles/tmux/dictation.conf

# Notes selector integration
source-file ~/.dotfiles/tmux/notes-selector.conf

# Claude Code integration (see claude-neovim/README.md)
source-file ~/.dotfiles/claude-neovim/tmux-keys.conf

# Plugins and theme (must be at the end)
source-file ~/.dotfiles/tmux/plugins.conf
