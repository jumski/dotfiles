#!/bin/bash

laptop_display=$(xrandr | grep eDP-1 | grep ' connected ' | wc -l)

pkill -f chromium
pkill -f chromium

if [ "$laptop_display" = "1" ]; then
    echo 'CHROMIUM_FLAGS="--force-device-scale-factor=1.6"' > ~/.chromium-browser.init
else
    echo > ~/.chromium-browser.init
fi

exec chromium-browser
