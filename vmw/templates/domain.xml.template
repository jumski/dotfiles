<domain type='kvm'>
  <name>{{VM_NAME}}</name>
  <memory unit='GiB'>4</memory>
  <vcpu>4</vcpu>
  <os>
    <type arch='x86_64'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <cpu mode='host-passthrough'/>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>

  <!-- Memory backing required for virtiofs -->
  <memoryBacking>
    <source type='memfd'/>
    <access mode='shared'/>
  </memoryBacking>

  <devices>
    <!-- Main disk (linked clone) -->
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='{{DISK_PATH}}'/>
      <target dev='vda' bus='virtio'/>
    </disk>

    <!-- Cloud-init ISO -->
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='{{CLOUDINIT_ISO}}'/>
      <target dev='sda' bus='sata'/>
      <readonly/>
    </disk>

    <!-- Virtiofs: ~/Code mount (ro enforced in cloud-init) -->
    <filesystem type='mount' accessmode='passthrough'>
      <driver type='virtiofs'/>
      <source socket='{{VIRTIOFS_CODE_SOCKET}}'/>
      <target dir='code'/>
    </filesystem>

    <!-- Virtiofs: ~/host mount (secrets.env, functions.sh) -->
    <filesystem type='mount' accessmode='passthrough'>
      <driver type='virtiofs'/>
      <source socket='{{VIRTIOFS_HOST_SOCKET}}'/>
      <target dir='host'/>
    </filesystem>

    <!-- Virtiofs: ~/.claude config mount (ro enforced in cloud-init) -->
    <filesystem type='mount' accessmode='passthrough'>
      <driver type='virtiofs'/>
      <source socket='{{VIRTIOFS_CLAUDE_SOCKET}}'/>
      <target dir='claude'/>
    </filesystem>

    <!-- Virtiofs: ~/.dotfiles/claude/ mount (symlink target for ~/.claude/ items) -->
    <filesystem type='mount' accessmode='passthrough'>
      <driver type='virtiofs'/>
      <source socket='{{VIRTIOFS_DOTFILES_CLAUDE_SOCKET}}'/>
      <target dir='dotfiles-claude'/>
    </filesystem>

    <!-- Virtiofs: ~/.dotfiles/opencode/ mount -->
    <filesystem type='mount' accessmode='passthrough'>
      <driver type='virtiofs'/>
      <source socket='{{VIRTIOFS_OPENCODE_SOCKET}}'/>
      <target dir='opencode'/>
    </filesystem>

    <!-- Virtiofs: writable path mounts (dynamically generated) -->
{{RW_FILESYSTEM_ENTRIES}}

    <!-- Network: bridged -->
    <interface type='bridge'>
      <source bridge='{{BRIDGE_NAME}}'/>
      <model type='virtio'/>
    </interface>

    <!-- Console -->
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>

    <!-- Graphics (optional, for debugging) -->
    <graphics type='vnc' port='-1' autoport='yes' listen='127.0.0.1'/>
  </devices>
</domain>
